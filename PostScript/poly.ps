% Testing PostScript for n-gon poly


/inch { 72 mul } def

/ngon { %Parameter order: xPosOrigin, yPosOrigin, sides, sideLen
	
	newpath
	
	/sideLen 				exch def
	/sides 					exch def
	/yPosOrigin 			exch def
	/xPosOrigin 			exch def

	/regularAngle 360 sides div def
	
	xPosOrigin yPosOrigin 	moveto
	sideLen sideLen 	  	scale
	1 72 				  	div setlinewidth % Counterbalances the scaling to prevent fat lines
	
	1 1 sides {
	/vertex exch def
	/theta vertex regularAngle mul def
	theta cos theta sin rlineto
	} for
	closepath
	
} def

%%Page: 1 1

% setrgbcolor take 3 floats ranging from 0.0 - 1.0 (yuck)
1 0.23 0.4 setrgbcolor

10 -1 3 {
	gsave
	/vertices exch def
	vertices 10 div vertices 15 div vertices cos sin setrgbcolor
	4 inch 6 inch vertices 1 inch ngon
	fill
	grestore
} for

15 -1 3 {
	gsave
	/vertices exch def
	vertices 10 div vertices 15 div vertices cos setrgbcolor
	4 inch 0.5 inch vertices 1 inch ngon
	fill
	grestore
} for

showpage

